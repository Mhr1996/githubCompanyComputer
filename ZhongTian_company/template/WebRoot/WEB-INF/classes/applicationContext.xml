	 <bean id="dbcp" 
		class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
		<property name="username" value="root">
		</property>
		<property name="password" value="156admin">
		<!-- <property name="password" value="156admin"> -->
		</property>
		<property name="maxActive" value="50" /> 
        <property name="maxIdle" value="50" />  
        <property name="maxWait" value="50" />  
		<property name="driverClassName" value="com.mysql.jdbc.Driver">
		</property>
		 <property name="url" value="jdbc:mysql://120.24.240.156:3306/ytsdata?useUnicode=true&amp;characterEncoding=utf8&amp;allowMultiQueries=true"> 
		
		</property>	
		</bean>
	<bean id="sqlsessionfactory" 
		class="org.mybatis.spring.SqlSessionFactoryBean">
		<!-- 注入连接信息 -->
		<property name="dataSource" ref="dbcp">
		</property>
		<!-- 处理查询结果为空值的列不映射字段问题 -->
		<property name="configLocation" value="classpath:configuration.xml"/>
		<!-- 注入SQL定义的XML信息 -->
		<property name="mapperLocations" 
			value="classpath:com/ddhc/sql/*.xml">
		</property>
	</bean>
	
	<!-- 扫描dao包下所有接口,批量生成dao实现类组件 -->
	<bean class="org.mybatis.spring.mapper.MapperScannerConfigurer">
		<property name="basePackage" 
			value="com.ddhc.dao">
		</property>
		<!--<property name="sqlsessionfactory" ref="sqlsessionfactory"></property>
		 自动注入sqlsessionfactory,如果有多个dataSource(数据源) ,自动注入就有可能失效 -->
	</bean>
	
	<!-- 组件扫描controller,service -->
	<context:component-scan base-package="com.ddhc"/>
